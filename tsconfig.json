{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "declarationMap": true,
      "allowJs": true,
      "target": "ESNext",
      "module": "CommonJS",
      "baseUrl": "./",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "package.json", "package-lock.json", "yarn.lock"]
  }